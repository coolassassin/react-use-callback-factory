{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "isolatedModules": false,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": [
    "index.ts"
  ]
}
